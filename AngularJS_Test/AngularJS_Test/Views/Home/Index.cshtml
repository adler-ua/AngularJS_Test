@model dynamic

@{
    Layout = null;
}

<!DOCTYPE html>

<html ng-app="mainApp">
<head>
    <title>title</title>
    <script src="~/Scripts/angular.min.js"></script>
    @*<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>*@
    <script src="~/Scripts/angular-resource.min.js"></script>
    @*<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular-resource.min.js"></script>*@
    <script src="~/Scripts/app/remoteService.js"></script>
    <script src="~/Scripts/app/cardsController.js"></script>
    <script src="~/Scripts/app/app.js"></script>
</head>
<body ng-controller="cardsListController">
    <form class="filter" name="filterForm">
        Filter: <input ng-model="query" /> - Max count: <input type="number" ng-model="cardsCount" required min="0" max="500" />
        <span class="error" ng-show="filterForm.cardsCount.$error.required">
            Required!
        </span>
        <span class="error" ng-show="filterForm.cardsCount.$error.number">
            Not valid number!
        </span>
    </form>
    <section>
        <div id="cardsList">
            <div ng-repeat="card in cards | filterAndReduce:cardsCount:query" class="cardItem">
                <a href="#/cards/{{card.id}}"> Card {{card.name}} {{card.id}}</a>
            </div>
        </div>
    </section>
</body>
</html>